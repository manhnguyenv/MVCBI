@model BackEndTransactionLogAddEdit

<style>
    #checkbox div {
        margin-top: 15px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BootstrapBeginForm())
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.BootstrapSubmit()
                    @Html.BootstrapResetForm()
                    @Html.BootstrapButtonRedirect("/Admin/TransactionLogs", "Quản Lý Transation Log")
                </div>
                <div class="panel-body">

                    @Html.AntiForgeryToken()
                    @Html.BootstrapValidationSummary()

                    @Html.HiddenFor(m => m.Id)

                    <div class="col-lg-6">
                        @Html.BootstrapDateTimePickerFor(m => m.TransationDate)
                    </div>
                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.ReceiveAccount, autoFocus: true)
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-6">
                        @{
                            List<SelectListItem> listStatus2 = new List<SelectListItem>
{
new SelectListItem {Value = "1", Text = "Active"},
new SelectListItem {Value = "0", Text = "InActive"}
};
                            var selectList2 = new SelectList(listStatus2, "Value", "Text");
                        }
                        @Html.BootstrapDropDownListFor(m => m.TransationType, selectList2, null)
                    </div>
                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.Amount, autoFocus: true)
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-lg-6">
                        @{
                            List<SelectListItem> listStatus3 = new List<SelectListItem>
{
new SelectListItem {Value = "1", Text = "Active"},
new SelectListItem {Value = "0", Text = "InActive"}
};
                            var selectList3 = new SelectList(listStatus3, "Value", "Text");
                        }
                        @Html.BootstrapDropDownListFor(m => m.UserId, selectList3, null)
                    </div>
                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.Nick)
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-lg-6">
                        @Html.BootstrapTextBoxFor(m => m.Reason)
                    </div>

                    <div class="col-lg-6" id="checkbox">
                        @Html.BootstrapCheckBoxFor(m => m.Status)
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-lg-12">
                        @Html.BootstrapTextBoxFor(m => m.ErrorMessage)
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-lg-6">
                        @Html.BootstrapDateTimePickerFor(m => m.Created_At)
                    </div>
                    <div class="col-lg-6">
                        @Html.BootstrapDateTimePickerFor(m => m.Updated_At)
                    </div>
                </div>
            </div>
        }
    </div>
</div>